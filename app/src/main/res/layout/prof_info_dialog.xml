<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/spinnerText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/input"
        android:layout_toLeftOf="@+id/input"
        android:layout_toStartOf="@+id/input"
        android:gravity="center_vertical|start" />

    <TextView
        android:id="@+id/inputText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/input"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical|start" />

    <EditText
        android:id="@+id/input"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/inputText"
        android:layout_toRightOf="@+id/inputText"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/spinnerText"
        android:layout_toEndOf="@+id/spinnerText"
        android:layout_toRightOf="@+id/spinnerText"
        android:background="@android:drawable/editbox_dropdown_light_frame" />
</RelativeLayout>